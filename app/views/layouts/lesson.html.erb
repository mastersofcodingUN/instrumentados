<head>
	<%= render "partials/header" %>
	<%= stylesheet_link_tag "styles"%>
	<%= javascript_include_tag "welcome" %>
	<title>Instrumentados</title>
</head>
<body>
    <nav class="navbar navbar-inverse" style="margin-bottom:20px;">
        <div id="header" class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" <%= link_to "Instrumentados", root_path %>></a>
          </div>
          <div>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %> <!-- Modificar el nav al iniciar sesion, uno diferente si el usuario inicia sesion-->
                <li>
                  <%= link_to edit_user_registration_path, :class => 'navbar-link' do%>
                    <span class="glyphicon glyphicon-pencil" style="padding-right:5px;"></span>Editar perfil
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, :class => 'navbar-link' do%>
                    <span class="glyphicon glyphicon-log-out" style="padding-right:5px;"></span>Cerrar Sesión
                  <% end %>
                </li>
              <% else %>
                <li><a href="/contact"><span class="glyphicon glyphicon-envelope" style="padding-right:5px;"></span> Contacto</a></li>
                <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user" style="padding-right:7px;"></span> Registrarse</a></li>
                <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in" style="padding-right:10px;"></span>Iniciar Sesión</a></li>
              <% end%>
            </ul>
          </div>
        </div>
      </nav>

    <%= yield %>

 </body>