<div class="container" style="width:100%; padding-right:2%">
  <div class="row">
    <div class="col-sm-3 sidenav" style="margin-top:1%">
      <br>
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Buscar">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
      <h4>Navigation bar</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#section1">Home</a></li>
        <li><a href="#section2">Button1</a></li>
        <li><a href="#section3">Button2</a></li>
        <li><a href="#section3">Button3</a></li>
      </ul><br>
    </div>
    <div class="col-md-9" style="background-color:white; padding-top:2%; padding-left: 5%; padding-right: 5%; padding-bottom: 5%">
      <% @courses.each do |course| %>
      <div class="col-md-4">
        <div>
          <br>
          <img style="width:100%; height:180px" src="https://ae01.alicdn.com/kf/HTB1DEWoHVXXXXclXFXXq6xXFXXX3/M-sica-moda-pared-del-vinilo-tambores-instrumentos-musicales-m-sica-Rock-Pop-Mural-etiqueta-de.jpg">
          <div class="caption">
            <h4><strong><%= link_to "#{course.name}", course_path(course.id)%></strong></h4>
            <p align="justify"><strong>Descripción: </strong>
            <%= course.description%>
            </p>
            <p align="justify"><strong>Género: </strong>
            <%= course.genre%>
            </p>
            <p align="justify"><strong>Instrumento: </strong>
            <%= course.instrument%>
            </p>
          </div>
          <br>
        </div>
      </div>

      <% end %>
    </div>
  </div>

  <div class="container" style="margin: 0 auto">
    <div class="row">
      <div class="col-md-12 text-center">
        <br>
        <%= will_paginate @courses, renderer: BootstrapPagination::Rails,  :previous_label => 'Atrás', :next_label =>'Adelante'%>

      </div>
    </div>
  </div>
</div>
