<%- if controller_name != 'sessions' && controller_name != 'registrations' %>
  <%= link_to "Iniciar Sesión", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarse", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'unlocks'%>
  <%= link_to "Olvidé mi contraseña", new_password_path(resource_name) %><br />
<% end -%>

<%- if(devise_mapping.confirmable? && controller_name != 'confirmations'&& controller_name != 'sessions' && controller_name != 'registrations' && controller_name != 'passwords'  && controller_name != 'unlocks')%>
  <%= link_to "Reenviar confirmación", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' && controller_name != 'registrations' && controller_name != 'passwords'%>
  <%= link_to "Enviar instrucciones de desbloqueo", new_unlock_path(resource_name) %><br />
<% end -%>

