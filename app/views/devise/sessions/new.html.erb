
  <title>Iniciar Sesión</title>
</head>
<style>
  .btn-success{
    border-radius: 0px;
  }
</style>
<body>
  <%= render "partials/banner" %>
  <div class="container" style="
              box-shadow:inset 0px 0px 200px black;
              min-width: 100%;
              min-height:100%;
              background-image: url(https://wallpapercave.com/wp/SJMRXEb.jpg);
              background-size:100% 100%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-12" style="padding-top:2%">
        <div class="container" style="width:80%;
				padding-top:2%; padding-bottom:2%;
				background: rgba(0, 0, 0, 0.3);
				border-radius:2px">
          <h1 style="color:#F5F5F5; padding-left:10%">INICIAR SESIÓN</h1>
          <hr>
          <div class="col-md-6" style="margin-top:1%">
            <div class="input-group" style="margin-bottom:10%; padding-right:10%">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Correo" %>
            </div>
            <div class="input-group" style="padding-right:10%">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Contraseña" %>
            </div>
            <br>
            <%= f.submit "Iniciar sesión", class: "btn btn-success" %>
            <p class="alert" style="color:#DD4B39"><%= alert %></p>
            <!--
            <div class="col-md-12" style="color:red">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
            </div>
          -->
          </div>
          <div class="col-md-6">
            <h4>Iniciar sesión con:</h4>
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
    <!--
          <% if devise_mapping.rememberable? -%>
            <div class="field remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          <% end -%>
    -->
    <% end %>
  </div>

  <%= render "/partials/footer"%>
</body>
