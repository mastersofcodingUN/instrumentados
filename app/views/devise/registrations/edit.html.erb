<head>
  <title>Editar perfil</title>
</head>

<body>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="text-center">Editar Perfil</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :name, "Nombre" %>
          <br>
          <%= f.text_field :name, autofocus: true, value: "#{current_user.name}"  %>
        </div>
        <div class="col-md-6">
          <%= f.label :email, "Correo" %>
          <br>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <br>
          <br>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for:
              <%= resource.unconfirmed_email %>
            </div>
          <% end %>
          <%= f.label :password, "Nueva contraseña" %>
          <br>
          <%= f.password_field :password, autocomplete: "off" %><br>
          <i style="color:grey; font-size:12px;">(Déjalo en blanco si no lo quieres editar)</i>
          <br>
          <% if @minimum_password_length %>
            <em style="font-size:12px; color:#CF4232">Mínimo <%= @minimum_password_length %> caracteres</em>
          <% end %>
        </div>
        <div class="col-md-6">
          <br>
          <br>
          <%= f.label :password_confirmation, "Confirmar nueva contraseña" %>
          <br>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <br>
          <%= f.label :current_password, "Contraseña actual"  %>
          <br>
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
        <div class="col-md-6">
          <br>
          <%= f.label :country, "Pais" %>
          <br>
          <%= f.text_field :country, autofocus: true, value: "#{current_user.country}" %>

        </div>
      </div>
      <div class="row">
        <div class="col-md-12 text-center">
          <br>
          <br>
          <div class="btn center">
            <%= f.submit "Guardar" %>
          </div>
          <p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Seguro que deseas cancelar tu cuenta?" }, method: :delete %></p>
          <%= link_to "Atrás", :back %>
        </div>
      </div>
  <% end %>
</body>
