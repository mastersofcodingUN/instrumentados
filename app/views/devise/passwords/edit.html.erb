<head>
  <title>Nueva Contraseña</title>
</head>

<div class="backgrounds">
  <div class="container text-center">
    <div class="inset" style="padding: 15px;">
      <h2>Cambia tu contraseña</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <div class="texts">
            <%= f.label :password, "Nueva Contraseña" %><br />
          </div>
          <% if @minimum_password_length %>
            <em>(Mínimo <%= @minimum_password_length %> caracteres) </em><br />
          <% end %>
          <div class="boxes">
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          </div>
        </div>

        <div class="field">
          <div class="texts">
            <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
          </div>
          <div class="boxes">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Cambiar mi contraseña" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
