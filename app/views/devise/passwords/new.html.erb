      <div class="field">
        <div class="texts">
          <%= f.label :email, "Correo" %><br/>
        </div>
        <div class="boxes">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div style="color: white;">
        <p>Te enviaremos instrucciones para restablecer tu contrase単a</p>
      </div>
      <div class="actions">
        <%= f.submit "Continuar" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
