<body>
  <%= render "partials/banner" %>
  
  <div id="post_content" class="container">
    <div class="row">
			<%= link_to 'Atras', posts_path, class: "btn btn-default" %>
      <div class="col-lg-8">
        <h1 class="mt-4">
          <%= @post.title %>
          <small><%= @post.comments.count %> Comentarios</small>
        </h1>
        <p>
          <%= @post.updated_at.strftime("%d %b. %Y - %l:%M %P") %>
          por
          <a href="#"><%= @post.user.name %></a>
        </p>
        <hr>
        <p><%= @post.content %></p>
        <hr>
        <div class="mb-4">
          <%= render @post_comments %>
          <%= will_paginate @post_comments, renderer: BootstrapPagination::Rails,  :previous_label => 'AtrÃ¡s', :next_label =>'Adelante'%>
          <%= render "comments/form" %>
        </div>
      </div>
    </div>
    <% if current_user.id == @post.user.id %>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Estas seguro de querer eliminar este post?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
  <%= render "partials/footer" %>
