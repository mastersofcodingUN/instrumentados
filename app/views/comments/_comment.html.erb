<div class="comment">
<div class="content">
  <p class="comment_content">
    <%= comment.text %>
  </p>
  <p class="comment_author">
    <%= comment.user.name %>
  </p>
</div>
<div class="buttons">
  <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %>
</div>
</div>
<%= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure?" } %>
    