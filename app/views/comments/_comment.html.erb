
<div class="media list-group-item">
  <div class="media-left">
    <%= image_tag comment.user.avatar.url(:thumb), class: "media-object", style: "width:60px"  %>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <a><%= link_to comment.user.name, user_path(comment.user.id) %></a>
      <small><i>el <%= comment.updated_at.strftime("%d %b. %Y - %l:%M %P") %></i></small>
    </h4>
  <p><%= comment.text %></p>
</div>
<% if current_user.id == comment.user.id %>
  <%= link_to "Editar", edit_course_post_comment_path(comment.post.course, comment.post, comment) , class: "btn btn-primary btn-xs"%>
  <%= link_to "Eliminar", [comment.post.course, comment.post, comment], method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-danger btn-xs"%>
<% end %>
</div>