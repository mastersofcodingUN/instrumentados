<p id="notice"><%= notice %></p>


<div class="container-fluid">
	<p style="text-align: justify;">
		<strong>Nombre:</strong>
		<%= @course.name %>
	</p>
	
	<p style="text-align: justify;">
	 	<strong>Descripción:</strong>
	 	<%= @course.description %>
	</p>

	<p style="text-align: justify;">
	 	<strong>Instrumento:</strong>
	 	<%= @course.instrument %>
	</p>

	<p style="text-align: justify;">
		<strong>Genero:</strong>
		<%= @course.genre %>
	</p>

	<p style="text-align: justify;">
		<strong>Vistas:</strong>
		<%= @course.views %>
	</p>

	<p style="text-align: justify;">
	  <strong>Dificultad:</strong>
	  <%= @course.difficulty %>
	</p>

	<p style="text-align: justify;">
		<strong>Reputación:</strong>
		<%= @course.reputation %>
	</p>
</div>

<% if @course.state == "INACTIVO" %>
	<div class="alert alert-warning">
		El curso no está activo. Añade lecciones para activarlo
	</div>
<% elsif @course.state == "ACTIVO" %>
	<div class="alert alert-warning">
		El curso está activo.
	</div>
<% end %>

<div class="container-fluid">
	<h3>Lecciones</h3>
	<table class = "table table-bordered table-striped">
	   <thead>
	      <tr>
	         <th>Leccion</th>
	         <th>Visualizar</th>	         
	      </tr>
	   </thead>

	   <tbody>
	      <% @course.lessons.each do |lesson| %>

	         <tr>
	            <td><%= lesson.title %></td>
	            <td><%= link_to "Visualizar Lección", lesson_path(lesson.id) %></td>	            
	         </tr>

	      <% end %>
	   </tbody>

	</table>

	<%= link_to "Crear Leccion", new_lesson_path(:course_id => params[:id]), class: "btn btn-primary" %>
	
</div>
<%= link_to 'Edit', edit_course_path(@course), class: "btn btn-primary" %>
<%= link_to 'Back', courses_path, class: "btn btn-primary" %>
